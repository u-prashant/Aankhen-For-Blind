<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.prashant.blindwalk.MainActivity"
android:background="#000000">
<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Welcome to Blind Walk !"
android:textColor="@color/text"
android:textSize="25sp"
android:layout_margin="30dp"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintLeft_toLeftOf="parent"
app:layout_constraintRight_toRightOf="parent"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintHorizontal_bias="0.437"
app:layout_constraintVertical_bias="0.028" />
<ImageView android:id="@+id/bluetoothOnImage"

android:layout_width="20dp"
android:layout_height="20dp"
android:background="#ff0000"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintLeft_toLeftOf="parent"
app:layout_constraintRight_toRightOf="parent"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintHorizontal_bias="0.085"

app:layout_constraintVertical_bias="0.194"/>

<TextView android:id="@+id/BT"

android:layout_width="wrap_content"
android:layout_height="20dp"
android:text="Bluetooth On "
android:textColor="@color/text"
android:textSize="18sp"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintLeft_toLeftOf="parent"
app:layout_constraintRight_toRightOf="parent"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintHorizontal_bias="0.346"
app:layout_constraintVertical_bias="0.194"/>
<ImageView android:id="@+id/connectionEstablishedImage"

android:layout_width="20dp"
android:layout_height="20dp"
android:background="#00ff00"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintLeft_toLeftOf="parent"
app:layout_constraintRight_toRightOf="parent"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintHorizontal_bias="0.085"
app:layout_constraintVertical_bias="0.26" />

<TextView android:id="@+id/Connection"
android:layout_width="wrap_content"
android:layout_height="20dp"
android:text="Connection Established"
android:textColor="@color/text"
android:textSize="18sp"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintLeft_toLeftOf="parent"
app:layout_constraintRight_toRightOf="parent"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintVertical_bias="0.26"/>
<ImageView android:id="@+id/OtherPermissionsImage"

android:layout_width="20dp"
android:layout_height="20dp"

android:background="#0000ff"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintLeft_toLeftOf="parent"
app:layout_constraintRight_toRightOf="parent"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintHorizontal_bias="0.085"
app:layout_constraintVertical_bias="0.326" />

<TextView android:id="@+id/Permission"
android:layout_width="wrap_content"
android:layout_height="20dp"
android:text="All permissions Granted"
android:textColor="@color/text"
android:textSize="18sp"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintLeft_toLeftOf="parent"
app:layout_constraintRight_toRightOf="parent"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintHorizontal_bias="0.502"
app:layout_constraintVertical_bias="0.326"/>

